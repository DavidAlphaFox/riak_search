%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 et
{sys, [
       {lib_dirs, ["../deps",
                   "../apps"]},
       {rel, "riak", "0.10.1",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         runtime_tools,
         erlang_js,
         mochiweb,
         webmachine,
         luke,
         qilr,
         riak_core,
         riak_kv,
         riak_search,
         riak_solr,
         merge_index
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "riak"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, erlang_js, [{incl_cond, include}]},
       {app, luke, [{incl_cond, include}]},
       {app, ebloom, []},
       {app, qilr, [{incl_cond, include}]},
       {app, riak_core, [{incl_cond, include}]},
       {app, riak_kv, [{incl_cond, include}]},
       {app, riak_search, [{incl_cond, include}]},
       {app, merge_index, [{incl_cond, include}]},
       {app, riak_solr, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{rebar, [
         {empty_dirs, [
                       "data/dets",
                       "data/ring",
                       "log/sasl"
                      ]},

         {overlay, "overlay"}
         ]}.
