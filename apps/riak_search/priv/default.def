{schema, [{name, "default"},
          {version, "1.1"},
          {default_field, "value"}],
 {fields,
%% Field names ending in "_num" are indexed as
    %% integers
  [{dynamic_field, [{name, "*_num"},
                    {type, integer}]},
   %% Field names ending in "_dt" are indexed as
   %% dates
   {dynamic_field, [{name, "*_dt"},
                    {type, date}]},

   {field, [{name, "facet"}, {type, string}, {required, false}, {facet, true}]},

   %% Everything else is a string
  {dynamic_field, [{name, "*"},
                   {type, string}]}]}}.
